.site-search-form
    width 80%
    margin auto
    
.st-search-input
      width 100%
      margin auto
      height 1.8em;
      font-size 1.3em;
      border-radius 0.3em;
      border 0.1em solid #F3B918

.local-search-result-cls
  margin 0
  padding 0

.local-search-empty
        color #F0B058
        margin 1em auto
        font-weight bold;
        font-size 1.3em;
        line-height 44px;
        text-align left;
        display block;
        
    ul
        margin 2em auto
        padding 0
        width 80%
        

    li
        list-style-type none;
        text-align left;
        border-top 1px solid #888888;
        padding 0
        margin 10px 0
        line-height 30px;

        a
            font-size 1.5em;
            font-weight bold
            color #444444
            
        a:hover
            color #D14E4E

        p
            font-size 1em;
            margin 0 5px

        em
            font-weight bold
            color #F57F17